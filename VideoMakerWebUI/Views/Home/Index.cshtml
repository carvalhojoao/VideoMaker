@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Video Maker</h1>
    <p>Your gameplays on all plataforms.</p>
</div>


<div class="box">

    <div class="box-body">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-default">
                    <div class="card-header">
                        <h3 class="card-title">Drag and drop your gameplays (Max.: 1GB)</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div id="videoDropZone" class="dropzone"></div>
                            </div>
                        </div>
                        <div id="actions" class="row">
                            <div class="col-lg-4">
                                <div class="btn-group w-100">
                                    <span class="btn btn-success col" id="addFiles">
                                        <i class="fas fa-plus"></i>
                                        <span>Add</span>
                                    </span>
                                    @*  <button class="btn btn-primary col" id="startUpload">
                                    <i class="fas fa-upload"></i>
                                    <span>Start upload</span>
                                    </button> *@
                                    <button class="btn btn-warning col" id="cancelUpload">
                                        <i class="fas fa-times-circle"></i>
                                        <span>Remove all</span>
                                    </button>
                                </div>
                            </div>
                            <div class="col-lg-6 d-flex align-items-center">
                                <div class="fileupload-process w-100">
                                    <div id="total-progress" class="progress progress-striped active" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="0">
                                        <div class="progress-bar progress-bar-success" style="width:0%;" data-dz-uploadprogress=""></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-2">
                                <div class="btn-group w-100">
                                    <button class="btn btn-primary col" id="tranformVideos">
                                        <i class="fas fa-upload"></i>
                                        <span>Transform</span>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="table table-striped files" id="videosPreview">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>